@page "/fleshrites"

<PageTitle>Flesh Rites</PageTitle>

<h3>FleshRites</h3>

@if (Echoes == null)
{
    <p>Loading...</p>
}
else
{
    @foreach (var echo in Echoes.Select((value, index) => new { value, index }))
    {
        <img src="@echo.value.ThumbnailUrl" alt="@echo.value.AltText" @onclick="() => ShowImage(echo.index)" />
    }

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var echo in Echoes.Select((value, index) => new { value, index }))
            {
                <div class="carousel-item @(ActiveImageIndex == echo.index ? "active" : "")">
                    <img class="d-block w-100" src="@echo.value.ImageUrl" alt="@echo.value.AltText">
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}

